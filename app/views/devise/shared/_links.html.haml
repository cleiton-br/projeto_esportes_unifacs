- if controller_name != 'sessions'
  = link_to "Fazer login", new_session_path(resource_name), class: "button is-info is-light"
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "Não tem cadastro?", new_registration_path(resource_name), class: "button is-outlined is-warning is-light"
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "button is-light"
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name), class: "button is-info is-light"
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Não recebeu instruções desbloqueadas?", new_unlock_path(resource_name), class: "button is-info is-light"
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class: "button is-info is-light"
    %br/
